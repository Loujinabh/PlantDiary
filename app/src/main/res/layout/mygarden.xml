<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:background="@drawable/pinkbackground"
    android:foregroundGravity="bottom|right"
    android:gravity="bottom|right"
    android:orientation="horizontal"
    app:layout_anchorGravity="bottom|right"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.65"
            android:background="@drawable/custom_card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:paddingBottom="1dp">
                <!-- user info !-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="fill_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:paddingBottom="1dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="128px"
                            android:layout_height="128px"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            app:cardCornerRadius="7dp">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="128px"
                                android:layout_height="128px"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="false"
                                android:layout_marginTop="0.5dp"
                                android:layout_marginEnd="0.5dp"
                                android:layout_marginBottom="81dp"
                                android:adjustViewBounds="false"
                                android:cropToPadding="false"
                                android:maxWidth="73dp"
                                android:maxHeight="73dp"
                                android:scaleType="fitCenter"
                                tools:src="@tools:sample/avatars" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_light"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:text="Welcome Back ,"
                                android:textColor="#D1CA72"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="fill_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksand_light"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:text="[Username]"
                                    android:textColor="#68A06B"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksand_light"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:text="!"
                                    android:textColor="#68A06B"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="right|end"
                            android:layout_marginLeft="160dp"
                            android:backgroundTint="#00000000"
                            android:contentDescription="click"
                            android:contextClickable="false"
                            android:foregroundGravity="right"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/more" />


                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="#00000000"
            android:outlineAmbientShadowColor="#00000000"
            app:cardBackgroundColor="#00FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6sp"
                    android:layout_marginTop="6sp"
                    android:layout_marginEnd="6sp"
                    android:layout_marginBottom="6sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16sp"
                    android:paddingTop="16sp"
                    android:paddingBottom="10sp">

                    <ImageButton
                        android:layout_width="52dp"
                        android:layout_height="48dp"
                        android:backgroundTint="#00000000"
                        android:contentDescription="click"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:visibility="visible"
                        tools:ignore="ContentDescription"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="42sp"
                        android:layout_gravity="center_horizontal"
                        android:cursorVisible="false"

                        android:fontFamily="@font/quicksand_light"
                        android:foregroundTint="#FFFFFFFF"
                        android:foregroundTintMode="multiply"
                        android:includeFontPadding="true"
                        android:padding="2sp"
                        android:shadowColor="#FFFFFFFF"
                        android:text="My Garden"
                        android:textColor="#FFFFFF"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorHint="#FFFFFFFF"
                        android:textColorLink="#FFFFFFFF"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#00FFFFFF">
        <androidx.cardview.widget.CardView
            android:outlineSpotShadowColor="#00000000"
            android:outlineAmbientShadowColor="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#00FFFFFF">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:animationCache="false"
                android:foregroundGravity="center"
                android:padding="20dp"
                android:scrollbars="none"
                app:columnCount="2">


                <androidx.cardview.widget.CardView
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="7dp"
                    android:outlineSpotShadowColor="@color/black">

                    <ImageView
                        android:id="@+id/image_mygarden1"
                        android:layout_width="165sp"
                        android:layout_height="190sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/backgrounds/scenic"
                        tools:ignore="InvalidId" />

                    <TextView
                        android:id="@+id/text_mygarden1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginBottom="5sp"
                        android:layout_gravity="bottom|left"
                        android:layout_marginRight="3sp"
                        android:fontFamily="@font/quicksand_light"
                        android:foregroundGravity="bottom"
                        android:gravity="bottom"
                        android:includeFontPadding="true"
                        android:text="test 1"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:layout_margin="10sp"
                    android:outlineProvider="none"
                    android:outlineSpotShadowColor="@color/black"
                    app:cardCornerRadius="7dp">

                    <ImageView
                        android:id="@+id/image_mygarden2"
                        android:layout_width="165sp"
                        android:layout_height="190sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/text_mygarden2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="12sp"
                        android:layout_marginRight="3sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/quicksand_light"
                        android:foregroundGravity="bottom"
                        android:gravity="bottom"
                        android:includeFontPadding="true"
                        android:text="test 2"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165sp"
                    android:layout_height="190sp"
                    android:layout_margin="10sp"
                    app:cardCornerRadius="7dp"
                    android:outlineSpotShadowColor="@color/black">

                    <ImageView
                        android:id="@+id/image_mygarden3"
                        android:layout_width="165sp"
                        android:layout_height="190sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                    <TextView
                        android:id="@+id/text_mygarden3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginBottom="5sp"
                        android:layout_gravity="bottom|left"
                        android:layout_marginRight="3sp"
                        android:fontFamily="@font/quicksand_light"
                        android:foregroundGravity="bottom"
                        android:gravity="bottom"
                        android:includeFontPadding="true"
                        android:text="test 3"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>


            </androidx.gridlayout.widget.GridLayout>
        </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</RelativeLayout>