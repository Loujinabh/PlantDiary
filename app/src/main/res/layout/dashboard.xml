<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgrounddashboard"
    android:orientation="horizontal">

    <!--usercard-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.65"
            android:background="@drawable/custom_card_background"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:paddingBottom="1dp">
                <!-- user info !-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="fill_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="0dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:paddingBottom="1dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="128px"
                            android:layout_height="128px"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            app:cardCornerRadius="7dp">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="128px"
                                android:layout_height="128px"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="false"
                                android:layout_marginTop="0.5dp"
                                android:layout_marginEnd="0.5dp"
                                android:layout_marginBottom="81dp"
                                android:adjustViewBounds="false"
                                android:cropToPadding="false"
                                android:maxWidth="73dp"
                                android:maxHeight="73dp"
                                android:scaleType="fitCenter"
                                tools:src="@tools:sample/avatars" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_light"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:text="Welcome Back ,"
                                android:textColor="#D1CA72"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="fill_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksand_light"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:text="[Username]"
                                    android:textColor="#68A06B"
                                    android:textSize="12sp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quicksand_light"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:text="!"
                                    android:textColor="#68A06B"
                                    android:textSize="12sp"
                                    android:textStyle="bold"></TextView>


                            </LinearLayout>

                        </LinearLayout>
                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="right|end"
                            android:layout_marginLeft="160dp"
                            android:contextClickable="false"
                            android:contentDescription="click"
                            android:backgroundTint="#00000000"
                            android:foregroundGravity="right"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/more"
                            tools:ignore="ContentDescription" />




                    </LinearLayout>

                </RelativeLayout>

                <android.widget.SearchView
                    android:layout_width="289dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:alpha="0.65"
                    android:background="@drawable/box_neautral"
                    android:gravity="center_vertical|fill_vertical"
                    android:hapticFeedbackEnabled="false"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingTop="5dp"
                    android:queryHint="new plant?" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.99"
                app:cardBackgroundColor="#9AB76C"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="1dp"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/ic_location"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/quicksand_light"
                                android:text="City, Country"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:ignore="TextContrastCheck" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/line"
                            tools:ignore="ContentDescription,ImageContrastCheck">


                        </ImageView>
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:alpha="0.99"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#9AB76C">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="1dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/ic_flower"
                                tools:ignore="ContentDescription,ImageContrastCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/quicksand_light"
                                android:text="My Garden"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/line"
                            tools:ignore="ContentDescription">

                        </ImageView>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="mygarden">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/image_mygarden1"
                                        tools:ignore="ContentDescription,TooDeepLayout"
                                        android:layout_width="145sp"
                                        android:layout_height="170sp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="145sp"
                                    android:layout_height="170sp"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/image_mygarden2"
                                        tools:ignore="ContentDescription"
                                        android:layout_width="145sp"
                                        android:layout_height="170sp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="145sp"
                                    android:layout_height="170sp"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/image_mygarden3"
                                        android:layout_width="145sp"
                                        android:layout_height="170sp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic"
                                        tools:ignore="ContentDescription" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:alpha="0.99"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#9AB76C">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="1dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/ic_flower"
                                tools:ignore="ContentDescription,ImageContrastCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/quicksand_light"
                                tools:ignore="TextContrastCheck"
                                android:text="Seasonal tips"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/quicksand_light"
                                android:foregroundGravity="right"
                                android:gravity="right"
                                android:text="month"
                                android:textColor="#E9DF66"
                                android:textSize="12sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/line"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/seasonalinfo1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15sp"
                            android:paddingStart="20sp"
                            android:paddingTop="5sp"
                            android:text="+  Water new ground covers and weed them to encourage spreading."
                            android:textColor="#FFFFFF"
                            tools:ignore="RtlSymmetry" />
                        <TextView
                            android:id="@+id/seasonalinfo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20sp"
                            android:textColor="#FFFFFF"
                            android:text=" +  Avoid fertilizing trees and shrubs after July 4th.
    Late summer fertilizing may cause lush growth thatâ€™s more prone to winter kill.

"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.99"
                app:cardBackgroundColor="#9AB76C"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="1dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/ic_flower"
                                tools:ignore="ContentDescription,ImageContrastCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/quicksand_light"
                                android:text="Trending in"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/locale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/quicksand_light"
                                android:foregroundGravity="right"
                                android:gravity="right"
                                android:text="Country"
                                android:textColor="#E9DF66"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:ignore="RtlHardcoded" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/line"
                            tools:ignore="ContentDescription,ImageContrastCheck">


                        </ImageView>


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="trending">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125sp"
                                    android:layout_height="150sp"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/intresting1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic"
                                        tools:ignore="ContentDescription" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125sp"
                                    android:layout_height="150sp"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/intresting2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="ContentDescription"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125sp"
                                    android:layout_height="150sp"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/intresting3"
                                        android:layout_width="wrap_content"
                                        tools:ignore="ContentDescription"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125sp"
                                    android:layout_height="150sp"
                                    android:layout_margin="10sp"
                                    app:cardCornerRadius="7dp">

                                    <ImageView
                                        android:id="@+id/intresting4"
                                        tools:ignore="ContentDescription"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>